<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title><%= 'title.site'.t %> - <%= 'description.site'.t %></title>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.js' %>
    <%= javascript_include_tag 'http://use.typekit.com/dwj4pkr.js' %>
    <%= javascript_tag 'Typekit.load()' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <%= viewport_meta_tag %>
    <%= apple_app_capable_meta_tag %>
    <%= apple_app_icon_link_tag %>
  </head>
  <%= content_tag :body, class: controller_name do %>
    <%= render 'layouts/header' %>
    <div class="main">
      <%= yield %>
    </div>
    <%= render 'layouts/footer' %>
    <%= yield :bottom %>
  <% end %>
</html>
