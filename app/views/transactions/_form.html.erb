<%= form_for Transaction.new, :url => transactions_path do |f| %>
  <%= f.label :to, 'labels.transaction.to'.t %>
  <%= f.email_field :to, :placeholder => 'placeholders.transaction.to'.t %>
  <%= f.label :amount, 'labels.transaction.amount'.t %>
  <%= f.number_field :amount, :placeholder => 'placeholders.transaction.amount'.t %>
  <%= f.submit %>
<% end %>